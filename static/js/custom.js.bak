function check(form) {
          if(form.userId.value=='') {
            document.getElementById('name').placeholder="请输入你的名字";
            document.getElementById('email').placeholder="请输入正确格式的Email";
            document.getElementById('phone').placeholder="请输入你的电话号码";
                form.userId.focus();
                return false;
           }
       if(form.email.value==''){
                document.getElementById('email').placeholder="请输入正确格式的Email";
                document.getElementById('phone').placeholder="请输入你的电话号码";
                form.email.focus();
                return false;
         }
          if(form.phone_number.value==''){
                document.getElementById('phone').placeholder="请输入你的电话号码";
                form.phone_number.focus();
                return false;
         }
          if(form.value!==''){
                alert("恭喜你，提交成功!");
                form.phone_number.focus();
                return false;
         }
         return true;
         }
